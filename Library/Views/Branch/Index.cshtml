@model Library.Models.Branch.BranchIndexModel

@{
    ViewBag.Title = "Branches";
}

<h3>@ViewBag.Title</h3>
<div id="branchIdex">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="branchIndexTable">
        <thead>
            <tr>
                <th>Branch Name</th>
                <th>Open Now</th>
                <th>Number Of Assets</th>
                <th>Number Of Member</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in Model.Branches)
            {
                <tr>
                    <td class="strongTd"><a asp-controller="Branch" asp-action="Detail" asp-route-id="@branch.id">@branch.Name</a></td>
                    <td>@branch.isOpen</td>
                    <td>@branch.NumberOfAssets</td>
                    <td>@branch.NumberOfMembers</td>
                </tr>
            }
        </tbody>
    </table>
</div>